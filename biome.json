{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", ".astro", "dist", "build", "*.d.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredDependencies": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "always"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"overrides": [
		{
			"include": ["*.astro"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		},
		{
			"include": ["*.ts", "*.tsx"],
			"linter": {
				"rules": {
					"complexity": {
						"useOptionalChain": "error"
					},
					"suspicious": {
						"noExplicitAny": "warn",
						"noAsyncPromiseExecutor": "error"
					},
					"style": {
						"noUnusedTemplateLiteral": "error",
						"useNamingConvention": {
							"level": "error",
							"options": {
								"strictCase": true
							}
						}
					}
				}
			}
		}
	]
}
